<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.appng.org/schema/platform" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.appng.org/schema/platform http://www.appng.org/schema/platform/appng-platform.xsd ">
	<datasource id="jobs">
		<config>
			<title>jobs</title>
			<meta-data bindClass="org.appng.application.scheduler.model.JobModel">
				<field name="name" type="text">
					<label>name</label>
				</field>
				<field name="origin" type="text">
					<label>origin</label>
				</field>
				<field name="cronExpression" type="text">
					<label>cronExpression</label>
				</field>
				<field name="nextFireTime" type="date" format="yyyy-MM-dd HH:mm:ss,SSS">
					<label>nextFireTime</label>
				</field>
				<field name="beanAvailable" type="image">
					<label id="status"></label>
					<icon condition="${!current.beanAvailable}">led_red</icon>
					<icon condition="${current.beanAvailable}">led_green</icon>
				</field>
				<field name="actions" type="linkpanel">
					<label>actions</label>
				</field>
			</meta-data>
			<linkpanel id="other" location="both">
				<link mode="intern" target="/jobs/create#tab_create">
					<label>create.job</label>
					<icon>new</icon>
				</link>
			</linkpanel>
			<linkpanel id="actions" location="inline">
				<link mode="intern" target="">
					<condition expression="${current.running}" />
					<label>running</label>
					<icon>running</icon>
				</link>
				<link mode="intern" target="">
					<condition expression="${not current.running and (current.nextFireTime ne null and current.cronExpression ne null)}" />
					<label>scheduled</label>
					<icon>scheduled</icon>
				</link>
				<link mode="intern" target="">
					<condition expression="${not current.running and (current.nextFireTime eq null or current.cronExpression eq null)}" />
					<label></label>
					<icon>spacer</icon>
				</link>
				<link mode="intern" target="/jobs/update/#{name}#tab_update" default="true">
					<label>update</label>
					<icon>edit</icon>
				</link>
				<link mode="intern" target="/jobs&#63;form_action=schedule&#38;id=#{name}" show-disabled="true">
					<condition expression="${current.beanAvailable and (current.nextFireTime eq null and current.cronExpression ne null)}" />
					<label>schedule</label>
					<icon>schedule</icon>
				</link>
				<link mode="intern" target="/jobs&#63;form_action=unschedule&#38;id=#{name}" show-disabled="true">
					<condition expression="${current.beanAvailable and (current.nextFireTime ne null or current.cronExpression eq null)}" />
					<label>unschedule</label>
					<icon>unschedule</icon>
				</link>
				<link mode="intern" target="/jobs&#63;form_action=start&#38;id=#{name}" show-disabled="true">
					<condition expression="${not current.running and current.beanAvailable}" />
					<label>start</label>
					<icon>start</icon>
				</link>
				<link mode="intern" target="/jobs&#63;form_action=delete&#38;id=#{name}" show-disabled="true">
					<condition expression="${not current.running}" />
					<label>delete</label>
					<icon>delete</icon>
					<confirmation id="confirm.delete.job" params="#{name}" />
				</link>
			</linkpanel>
		</config>
		<bean id="jobs" />
	</datasource>

	<datasource id="job">
		<config>
			<title>jobs</title>
			<params>
				<param name="id" />
			</params>
			<meta-data bindClass="org.appng.application.scheduler.model.JobModel">
				<field name="name" type="text" readonly="true">
					<label>name</label>
				</field>
				<field name="cronExpression" type="text">
					<label>cronExpression</label>
				</field>
				<field name="description" type="longtext">
					<label>description</label>
				</field>
			</meta-data>
		</config>
		<bean id="jobs">
			<option name="job" id="${id}" />
		</bean>
	</datasource>

	<datasource id="new-job">
		<config>
			<title>create.job</title>
			<meta-data binding="jobModel" bindClass="org.appng.application.scheduler.model.JobForm">
				<field name="availableJob" type="list:select">
					<label>availableJob</label>
				</field>
				<field name="name" type="text">
					<label>name</label>
				</field>
				<field name="cronExpression" type="text">
					<label>cronExpression</label>
				</field>
				<field name="description" type="longtext">
					<label>description</label>
				</field>
			</meta-data>
		</config>
		<bean id="jobs">
			<option name="action" id="create" />
		</bean>
	</datasource>

	<datasource id="records">
		<config>
			<title>records.list</title>
			<params>
				<param name="jobId" />
				<param name="path" />
				<param name="tab" />
			</params>
			<meta-data bindClass="org.appng.application.scheduler.model.JobRecord">
				<field name="siteName" type="text">
					<label>record.site</label>
				</field>
				<field name="applicationName" type="text">
					<label>record.application</label>
				</field>
				<field name="jobName" type="text">
					<label>record.jobName</label>
				</field>
				<field name="duration" type="decimal">
					<label>record.duration</label>
				</field>
				<field name="start" type="date">
					<label>record.start</label>
				</field>
				<field name="end" type="date">
					<label>record.end</label>
				</field>
				<field name="result" type="image">
					<label id="record.result"></label>
					<icon condition="${'FAIL' eq current.result}">led_red</icon>
					<icon condition="${'SUCCESS'eq current.result}">led_green</icon>
				</field>
				<field name="actions" type="linkpanel">
					<label>actions</label>
				</field>

			</meta-data>
			<linkpanel id="actions" location="inline">
				<link mode="intern" target="${path}/${current.id}${tab}" default="true">
					<label>record.details</label>
					<icon>detail</icon>
				</link>
			</linkpanel>
		</config>
		<bean id="records">
			<option name="jobId" value="${jobId}" />
		</bean>
	</datasource>


	<datasource id="record">
		<config>
			<title>records.item</title>
			<params>
				<param name="recordId" />
			</params>
			<meta-data bindClass="org.appng.application.scheduler.model.JobRecord">
				<field name="siteName" type="text" readonly="true">
					<label>record.site</label>
				</field>
				<field name="applicationName" type="text" readonly="true">
					<label>record.application</label>
				</field>
				<field name="jobName" type="text" readonly="true">
					<label>record.jobName</label>
				</field>
				<field name="triggerName" type="text" readonly="true">
					<label>record.triggerName</label>
				</field>
				<field name="duration" type="decimal" readonly="true">
					<label>record.duration</label>
				</field>
				<field name="runOnce" type="checkbox" readonly="true">
					<label>record.runOnce</label>
				</field>
				<field name="start" type="date" readonly="true">
					<label>record.start</label>
				</field>
				<field name="end" type="date" readonly="true">
					<label>record.end</label>
				</field>
				<field name="customData" type="longtext" readonly="true">
					<label>record.customData</label>
				</field>
				<field name="stacktraces" type="longtext" readonly="true">
					<label>record.stacktraces</label>
				</field>
				<field name="result" type="image" readonly="true">
					<label id="record.result"></label>
					<icon condition="${'FAIL' eq current.result}">led_red</icon>
					<icon condition="${'SUCCESS'eq current.result}">led_green</icon>
				</field>
			</meta-data>
		</config>
		<bean id="records">
			<option name="id" value="${recordId}" />
		</bean>
	</datasource>
</datasources>